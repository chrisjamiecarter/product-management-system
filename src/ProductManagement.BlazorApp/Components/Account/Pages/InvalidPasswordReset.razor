@page "/Account/InvalidPasswordReset"

<PageTitle>Invalid password reset</PageTitle>

<section class="container-md py-3">

    <div class="d-flex gap-3 align-items-center mb-4">
        <PersonFillSvg Height="1.5rem" Width="1.5rem" />
        <h1 class="h2 mb-0">Invalid Password Reset</h1>
    </div>

    <StatusMessage Status="@status" />

</section>

@code {
    private StatusModel status = new StatusModel("The password reset link is invalid.", MessageLevel.Error);
}